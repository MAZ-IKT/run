FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
	default         steadyState;
}

gradSchemes
{
	default         Gauss linear;
}

divSchemes
{
	default		Gauss linear;	
}

laplacianSchemes
{
	default		Gauss linear corrected;
}

interpolationSchemes
{
	default		linear UMIST;
}

snGradSchemes
{
	default		fourth;
}

fluxRequired
{
    	default	no;
    	p;
}


