FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;
    }

    T 
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }

   // "(U|k|epsilon|omega|f|v2)"
   // {
   //     solver          smoothSolver;
   //     smoother        symGaussSeidel;
   //     tolerance       1e-05;
   //     relTol          0.1;
   // }

    U
    {
	       solver          smoothSolver;
	       smoother        symGaussSeidel;
 	       tolerance       1e-06;
 	       relTol          0.01;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;

    residualControl
    {
        p               1e-2;
        U               1e-3;
        T               1e-3;
        //"(k|epsilon|omega|f|v2)" 1e-3;
    }
}

relaxationFactors
{
    equations
    {
        p               0.3;
        U               0.9; // 0.9 is more stable but 0.95 more convergent
        T               0.9;
        //".*"            0.9; // 0.9 is more stable but 0.95 more convergent
    }
}


